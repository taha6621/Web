  <!-- JavaScript for Click-to-Scroll -->
  <script>
    document.addEventListener('click', function (event) {
      // Check if the click is in the middle 50% of the page height
      const middleHeight = window.innerHeight / 2;
      if (event.clientY > middleHeight - 100 && event.clientY < middleHeight + 100) {
        // Scroll to the value section
        document.getElementById('value').scrollIntoView({ behavior: 'smooth' });
      }
    });
  </script>
